{
    "title": "Massimo",
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
			"palette": [
				{
					"slug": "foreground",
					"color": "#000",
					"name": "Foreground"
				},
				{
					"slug": "background",
					"color": "#FFF",
					"name": "Background"
				}
			]
		}
    },
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--libre-bodoni)",
					"fontSize": "56px",
					"fontWeight": "400",
					"letterSpacing": "-0.02em"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"fontWeight": "400"
		}
	}
}